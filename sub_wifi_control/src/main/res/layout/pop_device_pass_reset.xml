<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="修改设备访问密码"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_device_old_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titile"
        android:hint="请输入旧的访问密码"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_foget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_old_pass"
        android:layout_alignParentRight="true"
        android:text="忘记密码?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_device_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_foget"
        android:hint="请输入新的访问密码"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_device_pass_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_pass"
        android:hint="请再次输入新的访问密码"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_device_pass_sure"
        android:layout_centerHorizontal="true"
        android:text="确     定" />
</RelativeLayout>